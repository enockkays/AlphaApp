<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.me.alpha.com.me.alpha.Main_Menu.MainMenuActivity"
    android:id="@+id/MainMenuFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.me.alpha.Main_Menu.Custom_ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/black"
            android:textAlignment="center"
            app:tabGravity="fill"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            android:elevation="5dp"
            app:tabTextColor="@color/dimgray"
            app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/d_top_white_line"
            app:tabIndicatorColor="@color/transparent"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/black_gradient"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</FrameLayout>